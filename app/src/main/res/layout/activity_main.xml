<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/gazon"
    android:scaleType="centerCrop"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/question1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/questionTxtColor"
                    android:background="@color/colorPrimary"
                    android:textAlignment="center"/>
                <RadioGroup
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/q1_responses">
                </RadioGroup>
                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>

                <TextView
                    android:id="@+id/question2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/questionTxtColor"
                    android:background="@color/colorPrimary"
                    android:textAlignment="center"/>
                <RadioGroup
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/q2_responses">
                </RadioGroup>
                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>
                <TextView
                    android:id="@+id/question3"
                    android:textColor="@color/questionTxtColor"
                    android:background="@color/colorPrimary"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RadioGroup
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/q3_responses">
                </RadioGroup>
                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>
                <TextView
                    android:id="@+id/question4"
                    android:textColor="@color/questionTxtColor"
                    android:background="@color/colorPrimary"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RadioGroup
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/q4_responses">
                </RadioGroup>
                <View
                    android:id="@+id/divider4"
                    android:layout_height="15dp"
                    android:layout_width="match_parent"/>
                <TextView
                    android:id="@+id/question5"
                    android:textColor="@color/questionTxtColor"
                    android:background="@color/colorPrimary"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                 <CheckBox
                    android:id="@+id/q5_response1"
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/q5_response2"
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/q5_response3"
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/q5_response4"
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/divider5"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>
                <TextView
                    android:id="@+id/question6"
                    android:textColor="@color/questionTxtColor"
                    android:background="@color/colorPrimary"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/q6_response1"
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/q6_response2"
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/q6_response3"
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/q6_response4"
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
                <View
                    android:id="@+id/divider6"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>
                <TextView
                    android:id="@+id/question7"
                    android:textColor="@color/questionTxtColor"
                    android:background="@color/colorPrimary"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/q7_response1"
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/q7_response2"
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/q7_response3"
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/q7_response4"
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/divider7"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>
                <TextView
                    android:id="@+id/question8"
                    android:textColor="@color/questionTxtColor"
                    android:background="@color/colorPrimary"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/q8_response1"
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/q8_response2"
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/q8_response3"
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/q8_response4"
                    android:background="@color/questionResponsesColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/divider8"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>

                <TextView
                    android:id="@+id/question9"
                    android:textColor="@color/questionTxtColor"
                    android:background="@color/colorPrimary"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/q9_response"
                    android:background="@color/inputColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
                <View
                    android:id="@+id/divider9"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="?android:attr/listDivider" />
                <TextView
                    android:id="@+id/question10"
                    android:textColor="@color/questionTxtColor"
                    android:background="@color/colorPrimary"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/q10_response"
                    android:background="@color/inputColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
                <View
                    android:id="@+id/divider10"
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />
                <Button
                    android:id="@+id/submitAndCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/btnSubmitTxt" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>